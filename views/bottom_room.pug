div(class='fixed-bottom')
    div(class='d-flex navbar-dark bg-dark')
        form(id='send-msg', action="", class='col-12 p-1')
            div(class='input-group', id='input-form')
                div(class='input-group-prepend')
                    button(class='btn btn-outline-secondary', type='button', id='sel-img')
                        span(class='fas fa-plus')
                //div(class='ml-1 mr-2 align-self-center', id='whisper-target-block')
                    button(class='btn btn-secondary btn-sm', id='whisper-target', value='kim5257@naver.com' type='button') 김재구:
                textarea(id='msg', autocomplete='off', type='text', class='form-control', rows='1')
                div(class='input-group-append')
                    button(class='btn btn-outline-secondary', type='submit')
                        i(class='fas fa-share-square')
    div(class='d-flex navbar-dark bg-dark')
        form(id='send-img', action="/room/upload", enctype='multipart/form-data', class='col-12 p-1', style='display: none;')
            input(id='input-file', type='file', accept='.png,.jpeg,.jpg,.gif', style='display: none;')
            div(class='input-group', id='input-img-form')
                div(class='input-group-prepend')
                    button(class='btn btn-outline-secondary', type='button', id='back-msg-form')
                        span(class='fas fa-arrow-left')
                div(class='form-control', class='mw-50 mh-50', style='height: 180px')
                    img(id='img' class='img-responsive mx-auto d-block chat-msg-img', style='max-height: 100%;')
                div(class='input-group-append')
                    button(class='btn btn-outline-secondary', type='submit')
                        i(class='fas fa-share-square')
    div(class='d-flex navbar-dark bg-dark col-12 p-0')
        div(id='search-result', class='input-group p-1', style='display: none;')
            label(id='search-result-msg', class='form-control text-right', rows='1')
            div(class='input-group-append')
                button(id='btn-search-up', class='btn btn-outline-secondary')
                    i(class='fas fa-angle-up')
                button(id='btn-search-down', class='btn btn-outline-secondary')
                    i(class='fas fa-angle-down')
